{
  "version": 2,
  "name": "job-portal-admin",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev -- -p 3001",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "@job-portal-api-url",
    "NEXT_PUBLIC_API_KEY": "@job-portal-api-key"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@job-portal-api-url",
      "NEXT_PUBLIC_API_KEY": "@job-portal-api-key"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

